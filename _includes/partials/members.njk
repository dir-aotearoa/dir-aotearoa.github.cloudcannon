{% set memberslist = collections.members %}
    <section class="w-full grid grid-cols-1 gap-4 my-8 px-4">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap -m-2">
            {% if memberslist.length > 0 %}    
            {% for item in memberslist %}
                <div class="p-2 lg:w-1/2 w-full">
                    <div class="h-full flex items-center border p-4 rounded-lg">
                        <img alt="{{ item.data.name }}" class="w-20 h-20 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="{{ item.data.pic }}">
                        <div class="flex-grow">
                            <h2 class="title-font font-medium">{{ item.data.name }}</h2>
                            <p class="text-gray-600">{{ item.data.roles }}</p>
                            <p class="leading-relaxed text-lg mb-4">{{ item.data.bio }}</p>
                            <a class="text-pink-400 inline-flex items-center" href="{{ item.data.vitae }}">Learn More
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-l  inejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
            </div>
        </div>
    </section>